<p>Find me in app/views/users/edit.html.erb</p>

<%= form_for @user, url: usuarios_update_path(@user), html: { method: :put } do |f| %>
  <div class="campos_editar_usuario">
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
      </div>
    <div class="field">
      <%= f.label :cargo %>
      <%= f.text_field :cargo %>
     </div>
    <div class="field">
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
     </div>
    <div class="field">
      <%= f.label :apellido %>
      <%= f.text_field :apellido %>
      </div>
    <div class="field">
      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
      </div>
    <div class="field">
      <%= f.label :empresa_id %>
      <% if current_user.isSuperAdmin? %>
        <%= collection_select(:user, :empresa_id, Empresa.all, :id, :nombre_comercial,{prompt: 'Seleciona la empresa'} , required: '') %>
      <% elsif current_user.isAdmin? %>
        <%= collection_select(:user, :empresa_id, Empresa.all, :id, :nombre_comercial,{prompt: 'Seleciona la empresa'} , required: '', disabled: '') %>
      <% end %>
      </div>
    <div class="field">
      <%= f.label :rol %>
      <%= f.text_field :rol %>
    </div>
    <div class="field">
      <%= f.label 'Usuario' %>
      <%= f.text_field :username %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

