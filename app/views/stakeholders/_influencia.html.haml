= form_for(@stakeholder, url: { action: 'guardarinfluencia' })  do |f| 
	-if @stakeholder.errors.any? 
		#error_explanation
			%h2
				= pluralize(@stakeholder.errors.count, "error")
				prohibited this stakeholder from being saved:
		- @stakeholder.errors.full_messages.each do |message|		
			%li
				= message

	.row
		.large-4.columns
			%h6
				Influencia
		.large-4.columns

		.large-4.columns
			%h6
				Relevancia

	.row
		.large-4.columns
			= f.label :necesidades_logro
			= f.text_field :necesidades_logro
		.large-4.columns
			= f.label :necesidades_poder
			= f.text_field :necesidades_poder
		.large-4.columns
			= f.label :necesidades_afiliacion
			= f.text_field :necesidades_afiliacion

	.row
		.large-12.columns.text-center
			= f.submit 'Siguiente', class: 'button verde-bg'