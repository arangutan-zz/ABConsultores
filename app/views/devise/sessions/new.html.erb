<div class="row">
	<div class="large-12 column">
		<%= image_tag 'logo_stakeholdersms.png' %>
	</div>
</div>

<div class="row">
	<div class="large-12 column">
		<h2 class="azul">Ingreso</h2>
		<hr class="linea">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		  <div><%= f.label 'Usuario' %><br />
		  <%= f.text_field :username, :autofocus => true %></div>

		  <div><%= f.label 'Clave' %><br />
		  <%= f.password_field :password %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label 'Recuerdame' %></div>
		  <% end -%>

		  <div class="row">
		  	<div class="large-12 column text-center">
		  		<%= f.submit "INGRESAR" , class: 'button verde-bg' %>
		  	</div>
		  </div>
		<% end %>

		<% render "devise/shared/links" %>
	</div>
</div>