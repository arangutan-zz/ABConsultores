<%= form_for(@metting) do |f| %>
  <% if @metting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@metting.errors.count, "error") %> prohibited this metting from being saved:</h2>

      <ul>
      <% @metting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tema %><br>
    <%= f.text_field :tema %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha ,{ start_year: Date.current.year,end_year: Date.current.year+10, use_month_names: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']}%>
  </div>
  <div class="field">
    <%= f.label :asistentes %><br>
    <%= f.text_field :asistentes %>
  </div>
  <div class="field">
    <%= f.label :resumen %><br>
    <%= f.text_field :resumen %>
  </div>
  <div class="field">
    <%= f.label :stakeholder_id %><br>
    <%= collection_select(:metting, :stakeholder_id, current_user.empresa.stakeholders.all.uniq!, :id, :nombre_completo,{prompt: 'Seleciona el stakeholder'} , required: '')%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
